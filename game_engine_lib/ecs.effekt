def query[A]() { prog: { query: QueryFilter[A, Unit, Unit] } => Unit }: Unit /
{ ArchManager, Component[A] } = {
  val compId = do getComponentId[A]();
  val withIds = emptyMap();
  val withoutIds = emptyMap();
  withIds.update(compId, ());
  try {
    prog() { q };
  } with q: QueryFilter[A, Unit, Unit] {
    def addC[B]() = {
      resume { { query } { prog } =>
        with def query = internalAddC[B, A, Unit, Unit]() { query };
        prog() { query };
      }
    }
    def addOptC[B]() = {
      resume { { query } { prog } =>
        with def query = internalAddOptC[B, A, Unit, Unit]() { query };
        prog() { query };
      }
    }
    def withC[B]() = {
      resume { { query } { prog } =>
        with def query = internalWithC[B, A, Unit, Unit]() { query };
        prog() { query };
      }
    }
    def withoutC[B]() = {
      resume { { query } { prog } =>
        with def query = internalWithoutC[B, A, Unit, Unit]() { query };
        prog() { query };
      }
    }
    def buildQuery() = {
      resume { { query } { prog } =>
        with def query = internalBuildQuery() { query };
        prog() { query };
      }
    }
    def internalForeachRO(matchingArchIds) = {
      resume { { action } =>
        try {
          with do internalIterEntities(matchingArchIds.get(), false);
          with do internalIterRO[A](matchingArchIds.get());
          loop {
            action(do read(), do read());
          };
        } with stop {
          ()
        }
      }
    }
    def internalForeachRW(matchingArchIds) = {
      resume { { action } =>
        try {
          with do internalIterEntities(matchingArchIds.get(), false);
          with do internalIterRW[A](matchingArchIds.get());
          loop {
            do emit(action(do read(), do read()));
          };
        } with stop {
          ()
        }
      }
    }
    def internalGetWithWithoutIds() = {
      resume((withIds, withoutIds))
    }
  }
}

