def internalBuildQuery[T, With, Without]()
{ query: QueryFilter[T, With, Without] }
{ prog: { query: Query[T, With, Without] } => Unit }: Unit /
{ ArchManager } = {
  var lastChangeVersion = 0;
  val (withIds, withoutIds) = query.internalGetWithWithoutIds[T, With, Without]();
  val matchingArchIds = ref(resizableArray(0));
  def updateQuery() = {
    (do internalGetQueryArchIds(withIds, withoutIds, lastChangeVersion)).map() { result =>
      matchingArchIds.set(result.first);
      lastChangeVersion = result.second;
    };
    ()
  }
  try {
    prog() { q };
  } with q: Query[T, With, Without] {
    def foreachRO() = {
      resume { { action } =>
        updateQuery();
        query.internalForeachRO[T, With, Without](matchingArchIds) { action };
      }
    }
    def foreachRW() = {
      resume { { action } =>
        updateQuery();
        query.internalForeachRW[T, With, Without](matchingArchIds) { action };
      }
    }
  }
}

def world()
{ prog: => Unit /
  {
    Resource[RunWorld],
    ComponentManager, ArchManager, EntityIdManager, EntityManager,
    System,
    World
  }
}: Unit = {
  with createResource[RunWorld](RunWorld(true));
  with componentManager();
  with archManager();
  with entityIdManager();
  with entityManager();
  with defaultSystem();
  def stepWorld() = {
    do internalStep();
  }
  try {
    prog();
  } with World {
    def stepWorld() = {
      resume {
        stepWorld();
      }
    }
    def runWorld() = {
      resume {
        loop { { l } =>
          if (not((do getResource[RunWorld]()).run)) {
            l.break();
          }
          // TEMP: Slightly longer runtime before memory crash
          wait(10);
          //wait(0);
          stepWorld();
        }
      }
    }
  }
}
